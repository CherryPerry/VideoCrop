<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/icon_time_selector_size"/>
    <item
        android:id="@+id/oval"
        android:gravity="center">
        <shape android:shape="oval">
            <size
                android:width="@dimen/selector_enabled_size"
                android:height="@dimen/selector_enabled_size"/>
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item android:gravity="center">
        <ripple android:color="@color/colorAccent">
            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <size
                        android:width="@dimen/selector_ripple_size"
                        android:height="@dimen/selector_ripple_size"/>
                    <solid android:color="@android:color/white"/>
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>